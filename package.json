{
  "name": "find-a-friend-api",
  "version": "1.0.0",
  "description": "API REST para adoção de animais de estimação",
  "main": "index.js",
  "scripts": {
    "start:dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "build": "tsup src --out-dir build",
    "test": "vitest run --dir src/services",
    "test:pet": "vitest run --dir src/services/pet",
    "test:org": "vitest run --dir src/services/org",
    "test:user": "vitest run --dir src/services/user",
    "test:watch": "vitest --dir src/services",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "pretest:e2e:pet": "run-s test:create-prisma-environment test:install-prisma-environment",
    "pretest:e2e:org": "run-s test:create-prisma-environment test:install-prisma-environment",
    "pretest:e2e:user": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir src/http",
    "test:e2e:watch": "vitest --dir src/http",
    "test:e2e:pet": "vitest run --dir src/http/controllers/pet",
    "test:e2e:org": "vitest run --dir src/http/controllers/org",
    "test:e2e:user": "vitest run --dir src/http/controllers/user",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rocketseat/eslint-config": "2.1.0",
    "@types/bcryptjs": "2.4.6",
    "@types/node": "20.11.10",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "@vitest/coverage-v8": "1.2.2",
    "@vitest/ui": "1.2.2",
    "eslint": "8.56.0",
    "npm-run-all": "4.1.5",
    "prisma": "5.9.0",
    "supertest": "6.3.4",
    "tsc": "2.0.4",
    "tsup": "8.0.1",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.2.2"
  },
  "dependencies": {
    "@fastify/cookie": "9.3.1",
    "@fastify/jwt": "8.0.0",
    "@prisma/client": "5.9.0",
    "bcryptjs": "2.4.3",
    "dotenv": "16.4.1",
    "fastify": "4.26.0",
    "jwt-decode": "4.0.0",
    "zod": "3.22.4"
  }
}
